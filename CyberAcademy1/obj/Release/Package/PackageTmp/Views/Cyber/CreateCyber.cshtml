@model CyberAcademy1.Models.CyberModel

@{
    ViewBag.Title = "CreateCyber";
}

@*<h2>Create CyberAcademy</h2>*@



<div class="row">
    <div class="col-md-8">
        
        <input type="hidden" id="message" value="@ViewBag.Message" />
        <h1></h1>
        <h1></h1>
        <h1></h1>
        @*<h1 class="alert-info"></h1>*@
        <div class="card-body" id="bar-parent">

            @using (Html.BeginForm("CreateCyber", "Cyber", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-body">
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    First Name
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @placeholder = "enter your first name" })
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Last Name
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "enter your last name" })
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Other Names
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.OtherNames, new { @class = "form-control", @placeholder = "enter your other name" })

                                    @Html.ValidationMessageFor(m => m.OtherNames, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Gender
                                    @*<span class="required" aria-required="true"> * </span>*@
                                </label>
                                <div class="col-md-12">
                                    <select id="gender" name="gender" class="form-control">
                                        <option value="">Select gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Date of birth
                                    @*<span class="required" aria-required="true"> * </span>*@
                                </label>
                                <div class="col-md-12">
                                    <input type="date" name="DateOfBirth" class="form-control" value="dd/MM/yyyy" />
                                    @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Address
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "enter address" })
                                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Class Of Degree
                                    @*<span class="required" aria-required="true"> * </span>*@
                                </label>
                                <div class="col-md-12">
                                    <select id="classOfDigree" name="classOfDigree" class="form-control">
                                        <option value="">Select grade</option>
                                        <option value="Upper Credit">Upper Credit</option>
                                        <option value="Destinction">Destinction</option>
                                        <option value="First Class ">First Class</option>
                                        <option value="Second Class Upper">Second Class Upper</option>

                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Year Of Graduation
                                    @*<span class="required" aria-required="true"> * </span>*@
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.YearOfGraduation, new { @class = "form-control", @placeholder = "enter year of graduation" })
                                    @Html.ValidationMessageFor(m => m.YearOfGraduation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-body">
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Email
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "enter email" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    State Of Origin
                                    @*<span class="required" aria-required="true"> * </span>*@
                                </label>
                                <div class="col-md-12">
                                    @Html.DropDownListFor(m => m.StateId, (IEnumerable<SelectListItem>)ViewBag.states, "select state of origin", new { @class = "form-control", @placeholder = "select state of origin" })
                                    @Html.ValidationMessageFor(m => m.StateId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Contact Line:
                                    @*<span class="required" aria-required="true"> * </span>*@
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", @placeholder = "enter call line" })
                                    @Html.ValidationMessageFor(m => m.Contact, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    School Attended
                                    @*<span class="required" aria-required="true"> * </span>*@
                                </label>
                                <div class="col-md-12">
                                    @Html.DropDownListFor(m => m.HigherId, (IEnumerable<SelectListItem>)ViewBag.higher_inst, "select institution", new { @class = "form-control", @placeholder = "select institution" })
                                    @Html.ValidationMessageFor(m => m.HigherId, "", new { @class = "text-danger" })
                                </div>
                                <div id="other" class="col-md-12">
                                    <input type="text" name="NewHigher" placeholder="Type School" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Course Of Study
                                </label>
                                <div class="col-md-12">
                                    @Html.DropDownListFor(m => m.CourseId, (IEnumerable<SelectListItem>)ViewBag.courseOfdies, "select course of study", new { @class = "form-control", @placeholder = "select course of study" })
                                    
                                    @Html.ValidationMessageFor(m => m.CourseId, "", new { @class = "text-danger" })
                                </div>
                                <div id="othercourse" class="col-md-12">
                                    <input type="text" name="NewCourse" placeholder="Type Course" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Qualification
                                </label>
                                <div class="col-md-12">
                                    <select id="qualification" name="qualification" class="form-control">
                                        <option value="">Select qualification</option>
                                        <option value="Bsc">Bsc</option>
                                        <option value="HND">HND</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Upload NYSC certificate
                                </label>
                                <div class="col-md-12">
                                    <input type="file" name="file" id="file" class="form-control" value="file" />
                                </div>
                            </div>
                        </div>
                    </div>
                     <div class="row">
                         <div class="form-actions">
                            <div class="offset-md-3 col-md-9">
                                <button type="submit" class="btn btn-info" id="submitData">Submit</button>
                            </div>
                         </div>
                     </div>                  
                    
                </div>
            }
        </div>
    </div>
    <h1></h1>
    <h1></h1>
    <h1></h1>
    <h1></h1>
    <div>
      <h4 style="color:black"> CRITERIA FOR APPLICATION</h4> 
        
               <u>
                   <b> Age <strong>18 to 28 years</strong> eligible </b> 
                   <br />
                   <b>NYSC Certificate </b> 
               </u>
        <h1></h1>
        <h1></h1>
        <h1></h1>
        <h1></h1>
            <p><img src="~/Images/cybSoft.png" alt="cybsoft" width="350" height="350" /></p>
          
        
   
    </div>
</div>

@section Scripts {
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/toastr.js"></script>

<script>

        <script type="text/javascript">toastr.success("@(TempData["Message"] as string)");
</script>

         

<script type="text/javascript">
    $(document).ready(function displayOther() {
        $('#other').hide();
        $('#othercourse').hide();
        $('#HigherId').change(function () {
            //var nextid = $("#Higher").val();
            var nextid=$("#HigherId option:selected").html();
            //alert(nextid);

            if ( nextid == 'Other') {

                $('#other').show();
            }

            else {
                $('#other').hide();
            }
        });
        $('#CourseId').change(function () {
            //var nextid = $("#Higher").val();
            var nextid = $("#CourseId option:selected").html();
            //alert(nextid);

            if (nextid == 'Other') {

                $('#othercourse').show();
            }
            else {
                $('#othercourse').hide();
            }
        });

        var mssg = $('#message').val();
        if(mssg != null && mssg != "" && mssg != undefined )
        {
            toastr.success(mssg, "Application Form Status");
        }

    });
</script>



}


